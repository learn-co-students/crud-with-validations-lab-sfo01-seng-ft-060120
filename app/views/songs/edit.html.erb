<h3> Edit an Existing Song </h3><br>

<%= form_for @song do |s| %>
    Title: <%= s.text_field :title %><br><br>
    Released? <%= s.check_box :released %><br><br>
    Year of Release: <%= s.text_field :release_year %><br><br><br>
    Artist Name: <%= s.text_field :artist_name %><br><br><br>
    Genre: <%= s.text_field :genre %><br><br><br>
    <%= s.submit %>
<% end %>